// Homepage Content
#bg-body-homepage
    width 100%
    height 675px
    float left
    position fixed
    top 0
    z-index -1
    background-image url(../img/bg-body-homepage.jpg)
    background-size cover
    background-repeat no-repeat
    background-position center center

#img-lincoln-labs-logo-full
    width 100%
    height 494px
    background-image url(../img/logo-lincoln-labs-full.png)
    background-repeat no-repeat
    background-position center 60px
    background-size 269px 255px

#wrapper-homepage-content
    width 100%
    background-color #e2e2e2
    float left
    margin-top 120px

#container-homepage-content
    background-color #fff
    min-height 1000px
    margin-top -120px

#homepage-headline-about
    margin-top 15px
    margin-bottom 30px

#homepage-h2
    padding-top 375px
    font-size 32px
    text-transform uppercase
    font-weight 500
    color #fff

.homepage-h1
    margin-top 10px
    color hex-teal
    font-size 42px
    text-transform uppercase
    font-weight 400

.homepage-h2
    margin-top 30px
    color hex-teal
    font-size 28px
    text-transform uppercase
    font-weight 300

.homepage-h3
    margin-top 30px
    color hex-teal
    font-size 24px
    text-transform uppercase
    font-weight 100

.homepage-h3 + .homepage-h3
    margin-top 10px

.homepage-h3-extra
    margin-top 30px
    color hex-teal
    font-size 24px
    text-transform uppercase
    font-weight 300

#h3-date
    font-weight 500
    
#h3-location
    font-weight 300

.homepage-h4
    margin-bottom 15px
    color hex-lght-red

.homepage-about-p
    font-size 16px
    font-weight 300
    color hex-dk-teal

#alert-reg-link
    display block
    font-size 16px
    margin-top 30px
    margin-bottom 90px
    text-align center

.homepage-goal
    min-height 420px

.homepage-h5,
.homepage-goal-p
    margin-top 170px

.homepage-h5
    font-size 28px
    font-weight 500

.homepage-goal-p
    font-size 18px
    font-weight 300
    border-left 1px solid #fff
    padding-left 15px

#homepage-goal-1
    margin-top 90px
    color #fff
    background-color hex-dk-teal
    
#homepage-goal-2
    color hex-teal

#homepage-goal-2 div div div p
    border-left 1px solid hex-teal
    padding-left 15px

#homepage-goal-3
    color #fff
    background-color hex-dk-teal

#homepage-headline-sponsor
    color hex-dk-teal
    margin-top 90px

#sponsor-g-o,
#sponsor-microsoft
    margin-bottom 60px

#sponsor-g-o a,
#sponsor-microsoft a
    display block
    width 100%
    height 100%
    text-indent -9999px
    
#sponsor-microsoft
    display block
    width 100%
    height 120px
    background-image url(../img/microsoft.jpg)
    background-repeat no-repeat
    background-position center center
    background-size 50%

#sponsor-g-o
    display block
    width 100%
    height 120px
    background-image url(../img/genopp.png)
    background-repeat no-repeat
    background-position center center
    background-size 25%

